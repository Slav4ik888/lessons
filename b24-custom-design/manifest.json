{
  "manifest_version": 3,
  "name": "Свой дизайн Б24",
  "version": "1.10",
  "description": "Изменяет дизайн сайта с настраиваемым фоном",
  "content_scripts": [{
    "matches": ["https://badcom.bitrix24.ru/*"],
    "js": ["index.js"],
    "all_frames": true,
    "run_at": "document_end"
  }],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Настройки фона"
  }
}
